{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ES6"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".idea",
    "node_modules",
    "lib",
    "dist"
  ]
}
